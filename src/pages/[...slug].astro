---
import Layout from "../layouts/Layout.astro";

import sanity from "../lib/sanity-client";
import { allPagesQuery } from "../lib/sanity-queries";
import type { PageType } from "../lib/types";

import parse from "../utils/parse";

export async function getStaticPaths() {
    const pages: Array<PageType> = await sanity.fetch(allPagesQuery);
    return pages.map((page) => {
        return {
            params: { slug: `${page.category.slug}/${page.slug}` },
            props: {
                title: page.title,
                lastUpdated: page.lastUpdated,
                body: parse(page.body),
            },
        };
    });
}

const { title, lastUpdated, body } = Astro.props;
---

<Layout title={title}>
    <section>
        <div class="py-2">
            <h1 class="text-2xl font-bold sm:text-3xl lg:text-6xl capitalize">
                {title}
            </h1>
            <p class="text-sm my-2 text-slate-500">
                Last updated: {
                    new Intl.DateTimeFormat("en-US", {
                        day: "numeric",
                        month: "long",
                        year: "numeric",
                    }).format(new Date(lastUpdated))
                }
            </p>
        </div>
        <article
            aria-label="Post"
            class="prose:slate prose md:max-w-none prose-p:text-justify prose-p:leading-loose prose-li:leading-loose prose-headings:m-0"
            set:html={body}
        >
        </article>
    </section>
</Layout>
