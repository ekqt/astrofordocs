---
export interface ItemType {
    title: string;
    url: string;
}

export interface Props {
    items: ItemType[];
}

const { items } = Astro.props;
---

<nav class="h-16 mx-auto flex max-w-screen-xl items-center justify-between p-6">
    <a
        href="/"
        class="text-xl font-bold hover:text-slate-600 dark:hover:text-slate-300"
    >
        Astro for Docs
    </a>

    <div class="flex gap-6 font-light">
        {
            items.map((item) => (
                <a
                    href={item.url}
                    target="_blank"
                    class="flex items-center gap-2 font-light hover:text-slate-600 dark:hover:text-slate-300"
                >
                    <svg
                        class="h-5 w-5"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-6 h-6"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                        />
                    </svg>
                    {item.title}
                </a>
            ))
        }
    </div>
</nav>
